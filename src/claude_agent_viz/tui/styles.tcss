/* Claude Agent Visualizer - Textual CSS Styles */

/* Color scheme - Tokyo Night inspired */
$background: #1a1b26;
$surface: #24283b;
$surface-lighten-1: #2f3549;
$surface-lighten-2: #414868;
$primary: #7aa2f7;
$secondary: #bb9af7;
$success: #9ece6a;
$warning: #e0af68;
$error: #f7768e;
$text: #c0caf5;
$text-muted: #565f89;

/* Main screen */
Screen {
    background: $background;
}

/* Status bar at top */
StatusBar {
    dock: top;
    height: 1;
    background: $surface;
    color: $text;
    padding: 0 1;
}

StatusBar .title {
    color: $primary;
    text-style: bold;
}

StatusBar .stats {
    color: $text;
}

StatusBar .alert {
    color: $warning;
    text-style: bold;
}

StatusBar .separator {
    color: $text-muted;
}

/* Main horizontal container */
#main-container {
    height: 100%;
    background: $background;
}

/* Session tree (left panel) */
#tree-container {
    width: 40%;
    min-width: 35;
    height: 100%;
    border: solid $surface-lighten-2;
    background: $surface;
}

#tree-container:focus {
    border: solid $primary;
}

/* Session tree styling */
SessionTree {
    padding: 1;
    scrollbar-background: $surface;
    scrollbar-color: $surface-lighten-2;
}

SessionTree > .tree--cursor {
    background: $surface-lighten-2;
}

SessionTree > .tree--highlight {
    background: $surface-lighten-1;
}

SessionTree .tree--guides {
    color: $text-muted;
}

/* Detail panel (right panel) */
#detail-container {
    width: 60%;
    height: 100%;
    border: solid $surface-lighten-2;
    background: $surface;
    padding: 1 2;
}

#detail-container:focus {
    border: solid $primary;
}

/* Detail panel content */
DetailPanel .title {
    text-style: bold;
    color: $text;
    margin-bottom: 1;
}

DetailPanel .section {
    margin-bottom: 1;
}

DetailPanel .section-header {
    color: $text-muted;
    text-style: bold;
    margin-top: 1;
    margin-bottom: 0;
}

DetailPanel .value {
    color: $text;
}

DetailPanel .dim {
    color: $text-muted;
}

DetailPanel .prompt {
    background: $surface-lighten-1;
    padding: 1;
    margin: 1 0;
    border: solid $surface-lighten-2;
}

/* Status colors */
.status-running {
    color: $warning;
}

.status-completed {
    color: $success;
}

.status-failed {
    color: $error;
}

.status-waiting {
    color: $primary;
}

.status-waiting-input {
    color: $primary;
}

/* Progress bar */
ProgressBar {
    padding: 0 1;
    margin: 0 0 1 0;
}

ProgressBar > .bar--bar {
    color: $primary;
}

ProgressBar > .bar--complete {
    color: $success;
}

/* Data table in detail panel */
DetailPanel DataTable {
    height: auto;
    max-height: 12;
    background: $surface;
    margin: 1 0;
}

DetailPanel DataTable > .datatable--header {
    background: $surface-lighten-1;
    color: $text-muted;
}

DetailPanel DataTable > .datatable--cursor {
    background: $surface-lighten-2;
}

/* Footer */
Footer {
    background: $surface;
    color: $text-muted;
}

Footer > .footer--key {
    background: $surface-lighten-2;
    color: $text;
}

Footer > .footer--description {
    color: $text-muted;
}

/* Scrollbars */
* {
    scrollbar-background: $surface;
    scrollbar-color: $surface-lighten-2;
    scrollbar-color-hover: $surface-lighten-2;
    scrollbar-color-active: $primary;
}
